                                        false, false, true,
                                        true,  true,  false]</rosparam>

      <param name="CameraPose_differential" value="false"/>
      <param name="IMUdata_differential" value="false"/>

      <param name="CameraPose_relative" value="true"/>
      <param name="IMUdata_relative" value="false"/>

      <param name="IMUdata_remove_gravitational_acceleration" value="false"/>

      <param name="print_diagnostics" value="true"/>

      <param name="CameraPose_queue_size" value="10"/>
      <param name="IMUdata_queue_size" value="10"/>

